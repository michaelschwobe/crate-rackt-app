{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "plugins": [
      "react",
      "jsx-a11y",
      "import"
  ],
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "class-methods-use-this": "off",
    "import/extensions": "off",
    "import/no-extraneous-dependencies": "off",
    "max-len": "off",
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "react/jsx-filename-extension": "off",
    "react/require-default-props": "warn",
    "spaced-comment": "warn"
  }
}
