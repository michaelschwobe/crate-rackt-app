{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "browser": true
  },
  "plugins": [
    "import",
    "jsx-a11y",
    "prettier",
    "react"
  ],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "prettier/prettier": ["error", {
      "printWidth": 100,
      "singleQuote": true,
      "trailingComma": "all"
    }],
    "react/jsx-filename-extension": "off",
    "react/require-default-props": "warn",
    "spaced-comment": "warn"
  }
}
